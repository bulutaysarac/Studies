<Window x:Class="Studies.AsyncProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studies.AsyncProgramming"
        mc:Ignorable="d"
        Title="Asynchronous Programming" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <RichTextBox Name="txtData" Background="Lavender" IsReadOnly="True" Padding="5" Margin="5" Grid.ColumnSpan="2" />
        <Button Name="btnGetDataAsync" Content="Get Data Async" Grid.Row="1" Grid.Column="0" Margin="5" Click="btnGetDataAsync_Click"/>
        <Button Name="btnGetDataSync" Content="Get Data Sync" Grid.Row="1" Grid.Column="1" Margin="5" Click="btnGetDataSync_Click"/>
    </Grid>
</Window>
